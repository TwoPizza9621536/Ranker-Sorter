{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
